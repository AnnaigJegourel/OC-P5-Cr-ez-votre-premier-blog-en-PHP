{% extends "layout/layout.twig" %}

{% block title %}Modification d'un article{% endblock %}

{% block description %}Page de modification d'un article du blog{% endblock %}

{% block main %}
    <main id="postupdate">

        <form method="post" action="index.php?access=post!updatePost&id={{post.id}}">Saisissez vos modifications :
            <label for="title">Titre : </label>
			<input type="text" name="title" value="{{post.title}}">

            <label for="intro">Chapô (150 caractères maximum) : </label>
			<textarea name="intro" maxlength="150">{{post.intro}}</textarea>

            <label for="content">Texte de l'article : </label>
			<textarea name="content">{{post.content}}</textarea>
					
			<input type="submit" value="Envoyer">
        </form>

    </main>
{% endblock %}