{% extends 'layout/layout.twig' %}

{% block title %}Modification d'un article{% endblock %}

{% block description %}Page de modification d'un article du blog{% endblock %}

{% block main %}
    <main id="postupdate">

        <form method="post" action="index.php?access=post!postupdate">Saisissez vos modifications :
            <label for="title">Titre : </label>
			<input type="text" name="title">

            <label for="intro">Chapô (150 caractères maximum) : </label>
			<textarea name="intro" maxlength="150"></textarea>

            <label for="content">Texte de l'article : </label>
			<textarea name="content"></textarea>
					
			<input type="submit" value="Envoyer">
        </form>

    </main>
{% endblock %}