{% extends "layout/layout.twig" %}

{% block title %}Création d'un profil utilisateur{% endblock %}

{% block description %}Page de création d'un profil utilisateur{% endblock %}

{% block main %}
    <main id="createUser">

        <section>

            <h2>Créer un profil</h2>

            <form method="post" action="index.php?access=user!createuser">Saisissez vos informations pour créer votre compte :
                
                <fieldset>
                    <label for="name">Nom ou pseudo: </label>
                    <input type="text" name="name">
                </fieldset>
            
                <fieldset>
                    <label for="email">Adresse e-mail: </label>
                    <input type="email" name="email">
                </fieldset>

                <fieldset>
                    <label for="password">Mot de passe: </label>
                    <input type="password" name="password">
                </fieldset>
			
                <fieldset class="btn-fieldset">
                    <input class="btn" type="submit" value="Envoyer">
                </fieldset>
                
            </form>
            
        </section>

    </main>
{% endblock %}