{% extends "layout/layout.twig" %}

{% block title %}Modification d'un compte utilisateur{% endblock %}

{% block description %}Page de modification d'un compte utilisateur{% endblock %}

{% block main %}
    <main id="updateUser">

        <section>
            <h2>Modifier le profil</h2>

            <form class="updateUser" method="post" action="index.php?access=user!updateuser&id={{user.id}}">
                <fieldset>
                    <label for="name">Nom ou pseudo: </label>
                    <input type="text" name="name" value="{{user.name}}" maxlength="50" required>
                </fieldset>

                <fieldset>
                    <label for="email">Adresse e-mail: </label>
                    <input type="email" name="email" value="{{user.email}}" maxlength="100" required>
                </fieldset>

                <fieldset class="btn-fieldset">
                    <input class="btn" type="submit" value="Envoyer">
                </fieldset>
            </form>
        </section>

        <section>
            <h2>Modifier le mot de passe</h2>

            <form class="updateUser" method="post" action="index.php?access=user!updatepassword&id={{user.id}}">

                <fieldset>
                    <label for="password">Nouveau mot de passe: </label>
                    <input type="password" name="password" maxlength="255" required>
                </fieldset>

                <fieldset class="btn-fieldset">
                    <input class="btn" type="submit" value="Envoyer">
                </fieldset>
                
            </form>
        </section>

    </main>
{% endblock %}