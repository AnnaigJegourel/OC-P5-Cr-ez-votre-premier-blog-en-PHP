{% extends "layout/layout.twig" %}

{% block title %}Modification d'un compte utilisateur{% endblock %}

{% block description %}Page de modification d'un compte utilisateur{% endblock %}

{% block main %}
    <main id="updateUser">

        <form method="post" action="index.php?access=user!updateuser&id={{user.id}}">Saisissez vos modifications :
            </br>
            <label for="name">Nom ou pseudo: </label>
			<input type="text" name="name" value="{{user.name}}">
            </br>
            <label for="email">Adresse e-mail: </label>
			<input type="email" name="email" value="{{user.email}}">
            </br>
			<label for="password">Mot de passe: </label>
			<input type="password" name="password" value="{{user.password}}">
            </br>
			<input type="submit" value="Envoyer">
        </form>

    </main>
{% endblock %}