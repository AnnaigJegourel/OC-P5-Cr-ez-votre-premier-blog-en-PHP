{% extends "layout/layout.twig" %}

{% block title %}Annaig Jégourel{% endblock %}

{% block description %}Page d'accueil de mon blog en PHP-MVC{% endblock %}

{% block main %}
    <main id="home">

        <section>

            <h2>Développement web</h2>

            <article>
                <img src="img/portraitPetit.jpg" alt="photo d'identité en couleur"/>
                <p>Créativité et innovation</p>
                <p>Vos applications, un développement simple et efficace</p>
                <p>
                    <a href="CV.pdf" title="CV en pdf">Voir mon CV</a>
                </p>
            </article>
            
        </section>

        <section>

            <h2>Me contacter</h2>

            <form method="post" action="index.php?access=mailer">

                <fieldset>
                    <label for="name">Votre nom: </label>
                    <input type="text" name="name">
                </fieldset>

                <fieldset>
                    <label for="email">L'adresse e-mail où vous contacter: </label>
                    <input type="email" name="email">
                </fieldset>			

                <fieldset>
                    <label for="message">Votre message: </label>
                    <input type="text" name="message" placeholder="Ecrivez ici votre message"/>
                </fieldset>			
                
                <fieldset class="btn-fieldset">
                    <input class="btn" type="submit" value="Envoyer"/>
                </fieldset>
                
			</form>

		</section>

    </main>
{% endblock %}