{% extends "layout/layout.twig" %}

{% block title %}Création d'un profil utilisateur{% endblock %}

{% block description %}Page de création d'un profil utilisateur{% endblock %}

{% block main %}
    <main id="usercreate">

        <form method="post" action="index.php?access=user!createuser">Saisissez vos informations pour créer votre compte :
            <label for="name">Nom ou pseudo: </label>
			<input type="text" name="name">

            <label for="email">Adresse e-mail: </label>
			<input type="email" name="email">

			<label for="password">Mot de passe: </label>
			<input type="password" name="password">

			<input type="submit" value="Envoyer">
        </form>

    </main>
{% endblock %}