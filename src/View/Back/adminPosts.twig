
<section class="adminPosts">

            <h2>GERER LES ARTICLES</h2>

            <table>
                <thead>
                    <tr>
                        <th class="date">Date de création</th>
                        <th class="date">Dernière modification</th>
                        <th>Titre</th>
                        <th class="chapo">Chapô</th>
                        <th class="date">Gérer</th>
                    </tr>
                </thead>

                <tbody>
                    {% for post in allPosts %}
                        <tr>
                            <td> {{ post.date_created }} </td>
                            <td> {{ post.date_updated }} </td>
                            <td> {{ post.title }} </td>
                            <td class="chapo"> {{ post.intro }} </td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="index.php?access=post!readpost&id={{post.id}}" title="Post">
                                            Lire
                                        </a>
                                    </li>
                                    <li>
                                        <a href="index.php?access=post!updatepostform&id={{post.id}}" title="UpdatePost">
                                            Modifier
                                        </a>
                                    </li>
                                    <li>
                                        <a href="index.php?access=post!deletePost&id={{post.id}}" title="DeletePost">
                                            Supprimer
                                        </a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                <tbody>
            </table>

</section>